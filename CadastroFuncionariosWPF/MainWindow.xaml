<Window x:Class="CadastroFuncionariosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadastroFuncionariosWPF"
        mc:Ignorable="d"
        Title="Index" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Menu Height="20" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem Header="Gerenciar">
                <MenuItem Header="Cargos"></MenuItem>   
                <MenuItem Header="Departamentos"></MenuItem>   
                <MenuItem x:Name="FuncionariosMenu" Header="Funcionarios" Click="FuncionariosMenu_Click"></MenuItem>   
                <MenuItem Header="Cidades"></MenuItem>
                <MenuItem Header="Endereços"></MenuItem>
            </MenuItem>
            <MenuItem x:Name="SairMenu" Header="Sair" Click="SairMenu_Click">
            </MenuItem>
        </Menu>
    </Grid>
</Window>
